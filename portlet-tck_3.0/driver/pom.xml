								</property>
								<property>
									<name>test.ignore</name>
									<value>true</value>
								</property>
								<property>
									<name>test.browser</name>
									<value>${test.browser}</value>
								</property>
								<property>
									<name>test.browser.webDriver</name>
									<value>${test.browser.webDriver}</value>
								</property>
